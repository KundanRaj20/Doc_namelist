<script>
    var header = "<thead class='table_heading'><th>Name</th><th>Contact</th><th>Operation</th></thead>";
    var tbl_data = header;
    function clicker() {
        var n = document.getElementById("name_box").value;
        var c = document.getElementById("contact_box").value;
            if(!(n=="" || c=="")){
        tbl_data += "<tr><td><input type = 'text' value = '" + n + "' readOnly></td><td><input type = 'tel' value = '" + c + "' readOnly></td><td><button class='edit_c' onclick='edit(this)'>Edit</button> <button onclick='deletebox(this)'>Delete</button></td></tr>";
        document.getElementById("tbl").innerHTML = tbl_data;
        var n = document.getElementById("name_box").value = "";
        var c = document.getElementById("contact_box").value = "";
            }
    }
    function edit(elem) {
        elem.parentElement.parentElement.children[0].children[0].readOnly = false;
        elem.parentElement.parentElement.children[1].children[0].readOnly = false;
        elem.parentElement.innerHTML = "<button class='save_c' onclick='save(this)'>Save</button> <button onclick='deletebox(this)'>Delete</button>";
    }
    function save(elem) {
        elem.parentElement.parentElement.children[0].children[0].readOnly = true;
        elem.parentElement.parentElement.children[1].children[0].readOnly = true;
        elem.parentElement.innerHTML = "<button class='edit_c' onclick='edit(this)'>Edit</button> <button onclick='deletebox(this)'>Delete</button>";
    }
    function deletebox(elem) {
        elem.parentElement.parentElement.remove();
        tbl_data = header;
    }
    function search() {
        var length_data = document.getElementById("tbl").children[1].childNodes.length;
        var key = document.getElementById("search_box").value;
        var q = "";
        var a = "";
        for (var i = 0; i < length_data; i < a , i++) {
            q = document.getElementById("tbl").children[1].children[i].children[0].children[0].value;
            a = document.getElementById("tbl").children[1].children[i].children[1].children[0].value;
            if (key == q || key == a) {
                document.getElementById("tbl").children[1].children[i].children[0].children[0].style.backgroundColor = "lightgreen";
                document.getElementById("tbl").children[1].children[i].children[1].children[0].style.backgroundColor = "lightgreen";
            }
        }
    }

</script>

<body>
    <div class="center">

        <div class="container">
            <h1>Phone Book</h1><br>
            <input type="text" name="" id="search_box" placeholder="Search box">
            <button onclick="search()">Search</button><br><br><br><br><br>
            <input type="text" name="" id="name_box" class="name_input" placeholder="Enter your name"><br><br>
            <input type="tel" name="" id="contact_box" class="contact_input"
                placeholder="Enter your Contact Number"><br><br>
            <button onclick="clicker()">Submit</button><br><br>
            <table border="2" id="tbl">

            </table>
        </div>
    </div>
